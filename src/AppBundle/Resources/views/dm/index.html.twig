                  <h5><strong>Damage Resistances</strong> {{creatureentry.damageresistances}}</h5>
                  <h5><strong>Immunities</strong> {{creatureentry.immunities}}</h5>
                  <h5><strong>Senses</strong> {{creatureentry.senses}}</h5>
                  <h5><strong>Languages</strong> {{creatureentry.languages}}</h5>
                  <h5><strong>Challenges</strong> {{creatureentry.cr}} ({{creatureentry.experience}} XP)</h5>
            </div>
            <div id="{{'charskills' + creatureentry.id }}">
              <h4>Skills</h4>
              <h5>Acrobatics: {{creatureentry.acrobatics}}</h5>
              <h5>Animal Handling: {{creatureentry.animalhandling}}</h5>
              <h5>Arcana: {{creatureentry.arcana}}</h5>
              <h5>Athletics: {{creatureentry.athletics}}</h5>
              <h5>Deception: {{creatureentry.deception}}</h5>
              <h5>History: {{creatureentry.history}}</h5>
              <h5>Insight: {{creatureentry.insight}}</h5>
              <h5>Intimidation: {{creatureentry.intimidation}}</h5>
              <h5>Investigation: {{creatureentry.investigation}}</h5>
              <h5>Medicine: {{creatureentry.medicine}}</h5>
              <h5>Nature: {{creatureentry.nature}}</h5>
              <h5>Perception: {{creatureentry.perception}}</h5>
              <h5>Performance: {{creatureentry.performance}}</h5>
              <h5>Persuasion: {{creatureentry.persuasion}}</h5>
              <h5>Religion: {{creatureentry.religion}}</h5>
              <h5>Slight of Hand: {{creatureentry.slightofhand}}</h5>
              <h5>Stealth: {{creatureentry.stealth}}</h5>
              <h5>Survival: {{creatureentry.survival}}</h5>
            </div>
            <div id="{{'charattacks' + creatureentry.id }}">

              <h4>Other Actions and Traits</h4>
              <p>
                {{creatureentry.features}}
              </p>
            </div>
            <div id="{{'chardescription' + creatureentry.id }}">
              <h5><strong>Background</strong> {{creatureentry.background}} </h5>
              <p>
                <strong>Physical Description</strong> {{creatureentry.physicaldescription}}
              </p>
              <p>
                <strong>Possessions</strong> {{creatureentry.possessions}}
              </p>
            </div>
          </div>
        {% endverbatim %}
        </div>
      </div>
      <div class="app" id="initTracker" data-ng-controller="initTracker" style="display: none">
        <h3>Initiative Tracker</h3>
