          {% verbatim %}
          <div class="statblock col-md-3">
            <ul>
              <li><a href="{{'#charstatblock' + creatureentry.id }}">Stats</a></li>
              <li><a href="{{'#charskills' + creatureentry.id }}">Skills</a></li>
