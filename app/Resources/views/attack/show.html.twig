{% extends 'base.html.twig' %}

{% block body %}
    <h1>Attack</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attack.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attack.name }}</td>
            </tr>
            <tr>
                <th>Bonus</th>
                <td>{{ attack.bonus }}</td>
            </tr>
            <tr>
                <th>Damage</th>
                <td>{{ attack.damage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('attack_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('attack_edit', { 'id': attack.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
